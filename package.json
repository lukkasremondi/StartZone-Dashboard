{
  "name": "startzone",
  "version": "1.0.0",
  "description": "StartZone - Dashboard gaming para Windows com suporte a controles",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\"",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["gaming", "dashboard", "electron", "gamepad", "startzone"],
  "author": "Seu Nome",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "node-disk-info": "^1.3.0",
    "systeminformation": "^5.27.1"
  },
  "build": {
    "appId": "com.startzone.dashboard",
    "productName": "StartZone",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ]
  }
}